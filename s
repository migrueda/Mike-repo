[32m+[m		[32mdibujarCirculo(x+100, 200, 50, "black");[m
[32m+[m		[32mdibujarCirculo(x-100, 200, 50, "orange");[m
[32m+[m		[32mdibujarCirculo(300, y+100, 50, "blue");[m
[32m+[m		[32mdibujarCirculo(x, y-100, 50, "yellow");[m
[32m+[m
[32m+[m	[32m}[m
