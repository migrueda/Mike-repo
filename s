[32m+[m[32mfunction info(cadena) {[m
[32m+[m
[32m+[m[32mvar resultado = "La cadena \""+cadena+"\" ";[m
[32m+[m
[32m+[m[32m// Comprobar mayúsculas y minúsculas[m
[32m+[m[32mif(cadena == cadena.toUpperCase()) {[m
[32m+[m
[32m+[m[32m   resultado += " está formada sólo por mayúsculas";[m
[32m+[m[32m}[m
[32m+[m[32melse if(cadena == cadena.toLowerCase()) {[m
[32m+[m
[32m+[m[32m   resultado += " está formada sólo por minúsculas";[m
[32m+[m[32m}[m
[32m+[m[32melse {[m
[32m+[m
[32m+[m[32m   resultado += " está formada por mayúsculas y minúsculas";[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32m   return resultado;[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32malert(info("OVNI = OBJETO VOLADOR NO IDENTIFICADO"));[m
[32m+[m[32malert(info("En un lugar de la mancha..."));[m
