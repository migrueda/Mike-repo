[32m+[m
[32m+[m[32mif(numero < 0 || numero > 99999999) {[m
[32m+[m[32m   alert("El número proporcionado no es válido");[m
[32m+[m
[32m+[m[32m}[m
[32m+[m[32melse {[m
[32m+[m
[32m+[m[32m   var letraCalculada = letras[numero % 23];[m
[32m+[m[32m   if(letraCalculada != letra) {[m
[32m+[m
[32m+[m[32m      alert("La letra o el número proporcionados no son correctos");[m
[32m+[m[32m   }[m
[32m+[m[32m   else {[m
[32m+[m
[32m+[m[32m      alert("El número de DNI y su letra son correctos");[m
[32m+[m[32m   }[m
