[32m+[m		[32m}else if (x<0) {[m
[32m+[m			[32msentido = 1;[m
[32m+[m		[32m}[m
[32m+[m		[32mdibujarCircunferencia(x,20,10);[m
[32m+[m		[32mx = x + sentido;[m
[32m+[m
[32m+[m
[32m+[m
[32m+[m	[32m}[m
