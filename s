[32m+[m	[32mfunction calcularimc(peso, altura){[m
[32m+[m
[32m+[m[41m		[m
[32m+[m		[32mreturn (peso / (altura*altura));[m
[32m+[m
[32m+[m[41m		[m
[32m+[m	[32m}[m
