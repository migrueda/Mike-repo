[32m+[m
[32m+[m[32m<tbody>[m
[32m+[m[32m   <tr>[m
[32m+[m[32m      <th scope="row" class="especial">Título fila 1</th>[m
[32m+[m[32m      <td>Donec purus ipsum</td>[m
[32m+[m[32m      <td>Curabitur <em>blandit</em></td>[m
[32m+[m[32m   </tr>[m
[32m+[m[32m   <tr>[m
