[32m+[m	[32mvar pantalla = document.querySelector("canvas");[m
[32m+[m	[32mvar pincel = pantalla.getContext("2d");[m
[32m+[m	[32mpincel.fillStyle = "lightgray";[m
[32m+[m	[32mpincel.fillRect(0,0,600,400);[m
