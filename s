[32m+[m
[32m+[m[32m   // Numero de enlaces que apuntan a http://prueba[m
[32m+[m[32m   var contador = 0;[m
[32m+[m[32m   for(var i=0; i<enlaces.length; i++) {[m
[32m+[m
[32m+[m[32m      // Es necesario comprobar los enlaces http://prueba y[m
